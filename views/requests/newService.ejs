
<%- include('../partials/header') %>

<main class="newService-page">
<h1>New Service Request</h1>
<form id="newService-form" action="/requests" method="POST">
    <div>
        <label>Request Type:</label>
        <select name="requestType">
            <option value="Service Request">Service</option>
        </select>
    </div>
    <br>
    <div>
        <label>Date of Service Request:</label>
        <input type="datetime-local" name="date">
    </div>
    <br>
    <div>
    <label>Estimated Hours Each Day:</label>
        <select name="hoursEstimate">
            <option value="Less than 1 hour">Less than 1 hour</option>
            <option value="1 hour">1 hour</option>
            <option value="2 hours">2 hours</option>
            <option value="3 hours">3 hours</option>
            <option value="4 hours">4 hours</option>
            <option value="5 hours">5 hours</option>
            <option value="6+ hours">6+ hours</option>
        </select>
    </div>
    <br>
    <div id="newService-description">
        <label>Description:</label>
        <textarea type="text" name="content"></textarea>
    </div>
    <br>
    <input type="submit" id="addService-Btn" value="Add Request">
    <br>
</form>
</main>